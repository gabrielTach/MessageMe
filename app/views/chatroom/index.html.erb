<h4 class="ui center aligned medium icon header">
  <i class="circular bullhorn icon"></i>
  Chat!
</h4>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid card chatbox">
      <div class="content">
        <%= render @messages %>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
              <i class="icon edit"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid card chatbox">
      <div class="content">
        <div class="ui secondary vertical pointing fluid menu">
          <a class="item">
            Home
          </a>
          <a class="item active">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
