<h4 class="ui center aligned medium icon header">
  <i class="circular power off icon"></i>
  Log in to continue
</h4>
<div class="ui placeholder black segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <label>Username</label>
          <div class="ui left icon input">
            <%= f.text_field :username, placedholder:"Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui left icon input">
            <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui black submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
